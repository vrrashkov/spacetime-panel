# Spacetime Panel Environment Variables
# Copy this file to .env and update the values as needed

# SpacetimeDB Configuration
VITE_SPACETIME_URI=ws://127.0.0.1:3000
VITE_SPACETIME_MODULE=blockdrop-main
VITE_SPACETIME_MAX_RETRIES=3
VITE_SPACETIME_SUBSCRIPTION_DELAY=500
VITE_SPACETIME_RETRY_BACKOFF=2
VITE_SPACETIME_GENERATED_PATH=./generated

# Development Configuration
VITE_DEV_MODE=true
VITE_LOG_LEVEL=info

# Optional: Custom API Configuration
# VITE_API_BASE_URL=http://localhost:3001
# VITE_API_TIMEOUT=30000

# Optional: Feature Flags
# VITE_ENABLE_DEBUG_MODE=false
# VITE_ENABLE_METRICS=true

# Optional: Navigation Configuration
# NAV_PATTERN_DEPTH=1
# NAV_MIN_GROUP_SIZE=2
# NAV_ENABLE_PATTERN_GROUPING=true
# NAV_PATTERN_SEPARATOR=_
# NAV_MAX_GROUPS=10
# NAV_SHOW_UNGROUPED_IN_BASE=true
# NAV_COLLAPSE_SINGLE_GROUPS=false
# NAV_GROUP_SORT_BY=alphabetical
# NAV_SHOW_GROUP_COUNTS=true
# NAV_USE_PATTERN_ICONS=true 